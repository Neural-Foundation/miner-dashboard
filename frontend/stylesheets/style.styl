@import "bootstrap.min.css"
@import "bootstrap-theme.css"
@import "../../node_modules/rickshaw/src/css/graph.css"
@import "../../node_modules/rickshaw/src/css/detail.css"

body
    padding: 20px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

@media (max-width: 480px)
    body
        padding: 10px

a
    color: #00B7FF

dt
    font-weight: normal

#modules
    section
        position: relative
        dl
            margin-top: 0
        .panel
            .panel-body
                word-break: break-all
        .big-label
            vertical-align: bottom
            line-height: 30px
        .big
            margin-bottom: 10px
            font-size: 30px
            line-height: 30px
        footer
            position: absolute
            right: 15px
            bottom: 15px
            font-size: 10px
    .miner
        .hashrate
            position: relative
            .graph
                height: 120px
            strong
                position: absolute
                left: 20px
                top: 5px
                opacity: 1
            &:hover strong
                opacity: 0
        .devices
            margin-bottom: 20px
            table
                margin-bottom: 15px
                td
                    &:nth-child(1)
                        width: 20%
                    &:nth-child(2)
                        width: 10%
                    &:nth-child(3)
                        width: 30%
